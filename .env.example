# AutoGen编程工作流系统环境配置文件示例
# 复制此文件为 .env 并填入您的实际配置

# =============================================================================
# OpenAI API 配置
# =============================================================================

# OpenAI API密钥 (必需)
OPENAI_API_KEY=your-openai-api-key-here

# OpenAI API基础URL (可选，默认为官方API)
# OPENAI_BASE_URL=https://api.openai.com/v1

# OpenAI组织ID (可选)
# OPENAI_ORG_ID=your-org-id

# =============================================================================
# 模型配置
# =============================================================================

# 默认使用的模型
DEFAULT_MODEL=gpt-4o

# 模型温度参数 (0.0-2.0，越低越确定性)
MODEL_TEMPERATURE=0.1

# 最大令牌数 (可选)
# MAX_TOKENS=4000

# 请求超时时间 (秒)
REQUEST_TIMEOUT=60

# =============================================================================
# 工作流配置
# =============================================================================

# 基础工作流最大消息数
BASIC_WORKFLOW_MAX_MESSAGES=15

# 高级工作流最大消息数
ADVANCED_WORKFLOW_MAX_MESSAGES=25

# 是否启用并行处理 (true/false)
ENABLE_PARALLEL_PROCESSING=true

# 是否启用消息过滤 (true/false)
ENABLE_MESSAGE_FILTERING=true

# =============================================================================
# 日志配置
# =============================================================================

# 日志级别 (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# 是否启用详细日志 (true/false)
VERBOSE_LOGGING=false

# 日志文件路径 (可选)
# LOG_FILE=logs/autogen_workflow.log

# =============================================================================
# 安全配置
# =============================================================================

# 是否启用安全分析 (true/false)
ENABLE_SECURITY_ANALYSIS=true

# 安全检查级别 (basic, standard, advanced)
SECURITY_CHECK_LEVEL=standard

# =============================================================================
# 性能配置
# =============================================================================

# 是否启用性能优化建议 (true/false)
ENABLE_PERFORMANCE_OPTIMIZATION=true

# 性能检查级别 (basic, standard, advanced)
PERFORMANCE_CHECK_LEVEL=standard

# =============================================================================
# 缓存配置
# =============================================================================

# 是否启用响应缓存 (true/false)
ENABLE_RESPONSE_CACHE=false

# 缓存过期时间 (小时)
CACHE_EXPIRY_HOURS=24

# =============================================================================
# 开发配置
# =============================================================================

# 是否为开发模式 (true/false)
DEBUG_MODE=false

# 是否保存中间结果 (true/false)
SAVE_INTERMEDIATE_RESULTS=false

# 结果保存目录
RESULTS_DIR=results

# =============================================================================
# 代理配置 (如果需要)
# =============================================================================

# HTTP代理 (可选)
# HTTP_PROXY=http://proxy.example.com:8080

# HTTPS代理 (可选)
# HTTPS_PROXY=https://proxy.example.com:8080

# =============================================================================
# 其他配置
# =============================================================================

# 项目名称
PROJECT_NAME=AutoGen Programming Workflow

# 项目版本
PROJECT_VERSION=1.0.0

# 默认编程语言
DEFAULT_LANGUAGE=python

# 是否启用彩色输出 (true/false)
ENABLE_COLOR_OUTPUT=true
